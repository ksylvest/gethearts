doctype 5
html
  head
    title Hearts
    meta charset="UTF-8"
    meta content="Hearts, Cards, Mac, App, Store" name="keywords"
    meta content="The best Hearts game available in the Mac App Store." name="description"
    meta content="Hearts" property="og:title"
    meta content="The best Hearts game available in the Mac App Store" property="og:description"
    meta content="website" property="og:type"
    meta content="http://www.gethearts.com/" property="og:url"
    meta content=url(asset("image.png")) property="og:image"
    link href="//fonts.googleapis.com/css?family=Alegreya|Lato" rel="stylesheet"
    script src="//unpkg.com/jquery" rel="text/javascript"
    link href=asset("application.css") rel="stylesheet" type="text/css"
    script src=asset("application.js") type="text/javascript"
    javascript:
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
